
@{
    ViewData["Title"] = "Cart";
}
@using DhakaPlaza.Models
@model List<Products>

<h1> My Cart </h1>
<br />
<div class="row">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th> Image </th>
                <th> Name </th>
                <th> Price </th>
                <th> Product Type </th>
                <th> Color </th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/@item.Image" width="200px" height="150px" />
                    </td>
                    <td> @item.Name  </td>
                    <td> @item.Price  </td>
                    <td> @item.ProductTypes.ProductType  </td>
                    <td> @item.ProductColor  </td>
                    <td>

                        @*<button type="submit" class="btn btn-danger form-control" asp-action="Remove" asp-route-id="@Model.Id"> Remove from Cart </button>*@
                        
                        <a asp-area="Customer" asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger">
                            <i class="fas fa-trash-alt"> </i>
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="row">
    <div class="col-6">
        <a asp-action="Index" asp-controller="Home" class="btn btn-info"> Back to Home </a>
    </div>
    <div>
        <h3> Total Amount </h3>
        <h3> Grant Total : @Model.Sum(c=>c.Price) </h3>
        <a asp-action="Index" asp-controller="Home" class="btn btn-info"> Process to Checkout </a>
    </div>
</div>